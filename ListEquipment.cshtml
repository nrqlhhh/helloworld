@section MoreScripts {
    <link href="~/lib/datatables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
}
@model DataRowCollection

<h2>Equipment List</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MsgType"]">
        @TempData["Message"]
    </div>
}

<table id="jsEquipmentTable" class="table">
    <thead>
        <tr>
            <th scope="col">Equipment ID</th>
            <th scope="col">Element Material Number</th>
            <th scope="col">Serial No</th>
            <th scope="col">Equipment Type ID</th>
            <th scope="col">Storage Location</th>
            <th scope="col">Storage Bin</th>
            <th scope="col">Box Lot No</th>
            <th scope="col">Quantity</th>
            <th scope="col">Date created</th>
            <th scope="col">Date modified</th>
            <th scope="col">Equipment Tag</th>
            <th scope="col">Equipment ID</th>
            <th scope="col">Asset Tag</th>
            <th scope="col">Stocktake ID</th>
        </tr>
    </thead>
    @foreach (DataRow row in Model)
    {
        <tr>
            <td>@row["EQUIPMENT_ID"]</td>
            <td>@row["ELEMENT_MATERIAL_NO"]</td>
            <td>@row["SERIAL_NO"]</td>
            <td>@row["EQUIPMENT_TYPE_ID"]</td>
            <td>@row["STORAGE_LOCATION"]</td>
            <td>@row["STORAGE_BIN"]</td>
            <td>@row["BOX_LOT_NO"]</td>
            <td>@row["QUANTITY"]</td>
            <td>@row["DTE_TIME_CR"]</td>
            <td>@row["DTE_TIME_MOD"]</td>
            <td>@row["CREATED_BY"]</td>
            <td>@row["MODIFIED_BY"]</td>
            <td>@row["EQUIPMENT_TAG"]</td>
            <td>@row["EQUIPMENT_ID"]</td>
            <td>@row["tag"]</td>
            <td>@row["STOCKTAKE_ID"]</td>
            }

            <td>
                <a asp-controller="Equipment"
                   asp-action="Update"
                   asp-route-id="@row["EQUIPMENT_ID"]"></a>

            </td>

        </tr>
    }

</table>