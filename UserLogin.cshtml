

<!DOCTYPE html>

<head>
    <link rel="stylesheet"
          type="text/css"
          href="StyleSheet.css" />
    @model fyp.Model.UserLogin

    <meta charset="utf-8" />

    <script src="~/lib/moment/moment.min.js"></script>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <style type="text/css">


        body {
            background-image: linear-gradient(to bottom right,darkRed,white);
            background-repeat: no-repeat;
            text-align: center;
            background-size: cover;
            height: 1000px;
        }

        form {
            text-align: center;
            line-height: 30px;
            font-size: 20px;
            margin: 20px;
        }

        h2 {
            margin: 40px 0px 0px 0px;
            font-size: 50px;
            color: whitesmoke;
            font-weight: bold;
        }

        #log { /*The paragraph of LOGIN*/
            border-radius: 150px;
            margin: 125px 350px;
            padding: 30px;
            background: grey;
            height: 350px;
            line-height: 28px;
        }

        #head { /*LOGIN INTO YOUR ACCOUNT*/
            font-size: 30px;
            color: honeydew;
            font-weight: bold;
        }


        #but { /*the button*/
            height: 35px;
            border-radius: 8px;
            margin: 20px;
            width: 800px;
            color:silver;
            font-weight: bold;
            text-align: center;
            position: absolute;
            top: 55%;
            left: 50%;
            margin-right: -50%;
            transform: translate(-55%, -45%)
        }
        button {
            text-align: center;
        }
    </style>
</head>
<body>


    <form asp-controller="Account"
          asp-action="Login"
          method="post">

        <h2 class="form-signin-heading">Please Sign In</h2>
        <div id="log">
            <p id="head"> </p>
            <div class="form-group-row">
                <label asp-for="NRIC" id="head" class="control-label">NRIC :</label>
                <input asp-for="NRIC" class="form-control" />
                <span asp-validation-for="NRIC" class="text-danger"></span>
            </div>


            </div>



            @if (ViewData["Message"] != null)
            {
                <div class="form-group row">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <text>@ViewData["Message"]</text>
                    </div>
                </div>
            }

            <div class="form-group row">
                <div class="offset-sm-6 col-sm-3" id="but">
                    <div style="text-align:center">
                        <br> <input type="submit" class="btn btn-primary" value="Login" /><br>
                    
                    </div>
                </div>
        </div>

    </form>

</body>
